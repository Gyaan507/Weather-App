  <script>
    const CurrentDay = () => {
    const weekday = ["Sunday", "Monday", "Tuesday", "Wedday", "Thursday", "Friday", "Saturday"];
    let current_day = new Date();
    days = weekday[current_day.getDay()];
    let day = document.getElementById('day');
    day.innerText = days;
    
  };

    const CurrentDate = () => {
    var months =  ["JANUARY", "FEBRUARY", "MARCH", "APRIL", "MAY", "JUNE", "JULY", "AUGUST", "SEPTEMBER", "OCTOBER", "NOVEMBER", "DECEMBER"];
    var DayDetails = new Date();
    var month = DayDetails.getMonth() + 1;
    let currentMonth = months[month - 1];
    var date = DayDetails.getDate();
    let today_date = document.getElementById('today_date')
    today_date.innerText = `${date} ${currentMonth}`;
    };
    CurrentDay();
